<%= bootstrap_form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "コメントを書く", class: "form-control-file exampleFormControlFile1" %>
  </div>
  <%= f.hidden_field :youtuber_id %>
  <%= f.submit "投稿", class: "btn btn-primary" %>
<% end %>