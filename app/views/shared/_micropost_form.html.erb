<%= bootstrap_form_for(@micropost) do |f| %>
  <%= render 'shared/error_messages', object: f.object %>
  <div class="field">
    <%= f.text_area :content, placeholder: "What's happining?", class: "form-control-file exampleFormControlFile1" %>
  </div>
  <%= f.submit "Tweet", class: "btn btn-primary" %>
<% end %>