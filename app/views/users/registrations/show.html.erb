<div class="row">
  <aside class="col-md-4">
    <section class="user_info">
      <%= render 'users/user_info'%>
    </section>
    <section class="micropost_form">
      <%= render 'shared/micropost_form' %>
    </section>
  </aside>
  <div class="col-md-8">
    <% if current_user.microposts.any? %>
      <ol class="microposts">
        <%= render @microposts %>
      </ol>
      <%= paginate @microposts %>
    <% end %>
  </div>
</div>